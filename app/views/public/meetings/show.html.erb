<div class="bg-stone-700 h-32 lg:h-40 relative shadow-sm">
  <div class="absolute inset-x-0 mx-auto translate-y-16 lg:translate-y-24">
    <% if @meeting.platform.logo.attached? %>
      <%= image_tag @meeting.platform.logo, alt: "#{@meeting.platform.name} logo", class: "rounded-full h-32 w-32 mx-auto mb-4 border-4 border-white" %>
    <% else %>
      <%= image_tag "logo.png", alt: "Twine logo", class: "rounded-full w-24 h-24 mx-auto mb-4 border-4 border-white" %>
    <% end %>
  </div>
</div>

<div class="mx-auto mt-28 max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-3xl text-center">
    <% if @invite&.membership %>
      <p>
        Hi <%= @invite.user.first_name %>,<br>
        you're invited to …
      </p>
    <% end %>

    <div>
      <h1 class="text-4xl my-0">
        <%= @meeting.title %>
      </h1>
      <p class="mt-1">
        Hosted by
        <% if @meeting.platform.listed? %>
          <%= link_to @meeting.platform.name, public_site_path(@meeting.platform.shortname), class: "link" %><br>
        <% else %>
          <%= @meeting.platform.name %>
        <% end %><br>
        <%= datetime_format @meeting.happens_at %><br>
        <%= @meeting.location %>
      <p></p>
      <div class="mt-1 text-lg">
        <% case @rsvp&.answer %>
        <% when "yes" %>
          ✅ You're in! <%= modal_link_to "Change", edit_public_rsvp_path(@rsvp), class: "link" %>
        <% when "no" %>
          ❌ You declined
          <%= modal_link_to "Change", edit_public_rsvp_path(@rsvp), class: "link" %>
        <% else %>
          <% if @rsvp&.invite %>
            Are you
            in? <%= button_to "Yes", public_rsvps_path(meeting_guid: @meeting.guid, answer: :yes), method: :post %>
            <%= button_to "No", public_rsvps_path(meeting_guid: @meeting.guid, invite_guid: @rsvp.invite&.guid), method: :post %>
          <% else %>
            ✋ <%= modal_link_to "Let #{@meeting.platform.name} know you're joining", new_public_rsvp_path(meeting_guid: @meeting.guid, invite_guid: @rsvp&.invite&.guid), class: "link" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="mt-8 text-lg">
      <%= @meeting.description || "The host hasn't written a description" %>
    </div>
  </div>
</div>
