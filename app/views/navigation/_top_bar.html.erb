<div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
  <button
    data-action="sidebar#toggle"
    type="button"
    class="-m-2.5 p-2.5 text-gray-700 lg:hidden">
    <span class="sr-only">Open sidebar</span>
    <%= svg_tag 'icons/hamburger.svg' %>
  </button>

  <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6 justify-end">
    <div class="flex items-center gap-x-4 lg:gap-x-6">
      <div data-controller="dropdown"
           class="relative">
        <button type="button"
                data-action="click->dropdown#toggle"
                class="-m-1.5 flex items-center p-1.5"
                aria-expanded="false"
                aria-haspopup="true">
          <span class="sr-only">Open menu</span>
          <span class="flex items-center">
            <%= svg_tag 'icons/caret_down.svg', class: 'ml-2 size-5 text-gray-400' %>
          </span>
        </button>

        <dialog
          data-dropdown-target="menu"
          class="absolute left-0 w-40 -left-40 rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="user-menu-button"
          tabindex="-1">
          <%= button_to 'Log out',
                        session_path,
                        method: :delete,
                        id: 'user-menu-item-1',
                        class: 'block px-3 py-1 text-sm/6 text-gray-900'
          %>
        </dialog>
      </div>
    </div>
  </div>
</div>

