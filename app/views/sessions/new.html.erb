<div class="min-h-screen min-w-screen flex items-center justify-center flex-col">
  <div class="flex w-full mx-auto justify-center">
    <%= image_tag 'logo.png',
                  alt: 'Twine logo',
                  class: 'w-auto h-20' %>
  </div>

  <div class="mt-4 w-full max-w-md bg-white p-6 rounded-lg shadow-md">
    <% if flash[:alert] %>
      <div class="mb-4 text-[#17BEBB] text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="mb-4 text-[#76B041] text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: session_path, class: "space-y-4" do |form| %>
      <div>
        <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Email address", value: params[:email_address], class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#17BEBB]" %>
      </div>
      <div>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", maxlength: 72, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#17BEBB]" %>
      </div>
      <div>
        <%= form.submit "Sign in", class: "button button-primary button-xl w-full" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Forgot password?", new_password_path, class: "text-[#17BEBB] hover:underline" %>
    </div>
  </div>

  <p class="text-center mt-10">
    <span class="font-bold">Want to try?</span>
    <br>
    Twine is in closed testing. Send an empty email to <%= link_to "tomasbv@hey.com", "mailto:tomasbv@hey.com" %> with the subject line "I'm ready to twine".
  </p>
</div>
