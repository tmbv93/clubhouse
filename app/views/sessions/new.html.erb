<div class="min-h-screen min-w-screen flex items-center justify-center bg-gray-100 flex-col">
  <div class="mb-4 text-center text-4xl">
    twine.
  </div>

  <div class="w-full max-w-md bg-white p-6 rounded-lg shadow-md">
    <% if flash[:alert] %>
      <div class="mb-4 text-red-500 text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="mb-4 text-green-500 text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: session_path, class: "space-y-4" do |form| %>
      <div>
        <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Email address", value: params[:email_address], class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", maxlength: 72, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.submit "Sign in", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition" %>
      </div>
    <% end %>

    <!-- Forgot Password Link -->
    <div class="mt-4 text-center">
      <%= link_to "Forgot password?", new_password_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>

  <p class="text-center mt-10">
    <span class="font-bold">Try twine?</span>
    <br>
    Send an empty email to <%= link_to "tomasbv@hey.com", "mailto:tomasbv@hey.com" %> with the subject line "I'm ready to twine".
  </p>
</div>
