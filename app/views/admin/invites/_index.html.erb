<%# locals: (page:) %>

<%= table_of page,
             modal_row_link_to: -> (invite) { admin_meeting_invite_path(invite, meeting_id: invite.meeting_id) },
             no_results_placeholder: "No guests invited",
             columns: [
               {
                 content: -> (invite) { invite.contact.full_name }
               },
               {
                 content: -> (invite) do
                   content_tag :div, class: "text-end" do
                     rsvp_status_text invite
                   end
                 end
               }
             ]
%>
