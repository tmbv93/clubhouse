<%= turbo_frame_tag :modal_content do %>
  <%= form_with model: @meeting,
                url: admin_meeting_schedules_path,
                method: :post,
                data: { turbo_frame: "_top" } do |form| %>

    <div class="form-group">
      <%= form.label :scheduled_at, "Date & Time" %>
      <div class="flex flex-row gap-1">
        <%= form.datetime_local_field :scheduled_at, class: "form-control", autocomplete: false %>
        <%= form.submit "Save", class: "button button-primary" %>
      </div>
    </div>

    You can also <%= link_to "ask participants when they're available",
                             new_admin_meeting_survey_path(meeting_id: @meeting.id, template: :meeting_date),
                             data: { turbo_frame: "_top" },
                             class: "link" %>
  <% end %>
<% end %>
