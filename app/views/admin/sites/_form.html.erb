<%# locals: (platform:) %>

<%= form_with model: platform, url: admin_site_path(platform) do |form| %>
  <%= render "navigation/form_errors", model: platform %>

  <div class="form-group">
    <%= form.label :logo, "Logo" %>
    <%= form.file_field :logo %>
  </div>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :tagline, "Tagline" %>
    <%= form.text_field :tagline, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :shortname, "Your URL" %>
    <div class="mt-2 flex">
      <div class="flex shrink-0 items-center rounded-l-md bg-white px-3 text-base text-gray-500 outline outline-1 -outline-offset-1 outline-gray-300 sm:text-sm">https://twine.no/</div>
      <%= form.text_field :shortname, class: "-ml-px block w-full grow rounded-r-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
    </div>
  </div>

  <div class="form-group inline-form-group gap-2">
    <%= form.check_box :listed, class: "checkbox" %>
    <%= form.label :listed, "Publish website" %>
  </div>

  <%= form.submit "Save", class: "button button-primary" %>
<% end %>
