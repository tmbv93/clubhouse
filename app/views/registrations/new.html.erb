<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-semibold text-center mb-4">Sign up up to create your platform</h2>

    <%= form_with url: registration_path, model: @user, local: true, class: "space-y-4" do |form| %>
      <%= render "navigation/form_errors", model: @user %>
          <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, class: "form-control", required: true %>
          </div>
      
          <div class="form-group">
            <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>

      <div>
        <%= form.submit "Sign Up", class: "button button-primary button-xl w-full" %>
      </div>
    <% end %>
  </div>
</div>
